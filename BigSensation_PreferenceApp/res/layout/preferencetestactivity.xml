<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2" 
        android:orientation="vertical"
    >
        <TextView 
            android:id="@+id/preferencetestactivity_tv_testnumber"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:text="@string/testnum"   
        />
        <TextView 
            android:id="@+id/preferencetestactivity_tv_testtile"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:gravity="center"
        	android:text="@string/testtile" 
        	android:textSize="20sp"  
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip" 
        android:layout_weight="7"
    >
        <LinearLayout
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="5"
        	android:orientation="vertical" 
    	>
    		<ImageView
    		    android:id="@+id/preferencetestactivity_iv_select1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:gravity="center"
    		/>
    		<TextView 
    		    android:id="@+id/preferencetestactivity_tv_select1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:text="@string/testselect1"
    		    android:gravity="center"
    		/>
    	</LinearLayout>
        <LinearLayout
        	android:layout_width="0dip"
        	android:layout_height="wrap_content" 
        	android:layout_weight="5"
        	android:orientation="vertical" 
    	>
    		<ImageView
    		    android:id="@+id/preferencetestactivity_iv_select2"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:gravity="center"
    		/>
    		<TextView 
    		    android:id="@+id/preferencetestactivity_tv_select2"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:text="@string/testselect2"
    		    android:gravity="center"
    		/>
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" 
    >
        <Button
            android:id="@+id/preferencetestactivity_bt_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="선택"
        />
    </LinearLayout>

</LinearLayout>